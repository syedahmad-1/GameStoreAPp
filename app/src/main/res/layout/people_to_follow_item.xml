<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/user_profile"
        android:id="@+id/userIv"
        android:layout_marginStart="16dp"
        android:layout_width="36dp"
        android:layout_height="36dp"/>
    <TextView
        android:id="@+id/userNameTv"
        app:layout_constraintTop_toTopOf="@id/userIv"
        app:layout_constraintBottom_toBottomOf="@id/userIv"
        app:layout_constraintStart_toEndOf="@id/userIv"
        android:layout_marginStart="16dp"
        android:textColor="@color/textgrey"
        android:text="@string/example_user_name"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/followCv"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/userNameTv"
        app:layout_constraintBottom_toBottomOf="@id/userNameTv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/green3"
        app:strokeWidth="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<TextView
    android:paddingVertical="9dp"
    android:paddingHorizontal="18dp"
    android:id="@+id/followTv"
    android:text="@string/follow"
    android:textSize="12sp"
    android:textColor="@color/textgrey"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>