                <LinearLayout
                    android:id="@+id/organiserDetailsLl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/gradient_green_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="12dp"
                        android:text="Organiser’s Details and contact"
                        android:textColor="@color/textgrey"
                        android:textSize="16sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/organizerLogoIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/group_1208"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/organiserDetailsLl" />

                <TextView
                    android:id="@+id/organiserNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/gamehok_esports"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/organizerLogoIv"
                    app:layout_constraintStart_toEndOf="@id/organizerLogoIv"
                    app:layout_constraintTop_toTopOf="@id/organizerLogoIv" />

                <TextView
                    android:id="@+id/descriptionTv"
                    app:layout_constraintStart_toStartOf="@id/organizerLogoIv"
                    app:layout_constraintTop_toBottomOf="@id/organizerLogoIv"
                    android:text="@string/this_is_the_in_house_organiser_of_this_platform_you_can_follow_our_page_on_this_platform_for_regular_updates"
                    android:layout_width="250dp"
                    android:textColor="@color/grey"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/followCv"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintTop_toTopOf="@id/organiserNameTv"
                    app:layout_constraintBottom_toBottomOf="@id/organiserNameTv"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:cardBackgroundColor="@color/green3"
                    app:strokeWidth="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingVertical="9dp"
                        android:paddingHorizontal="18dp"
                        android:id="@+id/followTv"
                        android:text="@string/follow"
                        android:textSize="12sp"
                        android:textColor="@color/textgrey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/phoneIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/descriptionTv"
                    app:layout_constraintTop_toBottomOf="@id/descriptionTv"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/phoneText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9890987754"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/phoneIcon"
                    app:layout_constraintTop_toTopOf="@id/phoneIcon"
                    app:layout_constraintBottom_toBottomOf="@id/phoneIcon"
                    android:layout_marginStart="8dp"/>

                <!-- Email Contact -->

                <ImageView
                    android:id="@+id/emailIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_email"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="@id/emailText"
                    app:layout_constraintEnd_toStartOf="@id/emailText"
                    app:layout_constraintTop_toTopOf="@id/emailText"
                    app:layout_constraintVertical_bias="1.0"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Support@gamehok.com"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/phoneText"
                    app:layout_constraintBottom_toBottomOf="@id/phoneText"
                    android:layout_marginStart="8dp"/>

                <!-- WhatsApp Contact -->
                <ImageView
                    android:id="@+id/whatsappIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_whatsapp"
                    android:paddingVertical="16dp"
                    app:layout_constraintStart_toStartOf="@id/phoneIcon"
                    app:layout_constraintTop_toBottomOf="@+id/phoneText"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/whatsappText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_9890987754"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/phoneText"
                    app:layout_constraintTop_toTopOf="@id/whatsappIcon"
                    app:layout_constraintBottom_toBottomOf="@id/whatsappIcon" />



            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>



        <TextView
            android:id="@+id/moreTorunamentsHeadingTv"
            android:textStyle="bold"
            android:textColor="@color/textgrey"
            android:text="@string/more_tournaments_for_you"
            android:textSize="18sp"
            android:layout_marginStart="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/organiserDetailsCv"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintStart_toStartOf="@id/moreTorunamentsHeadingTv"
            app:layout_constraintTop_toBottomOf="@id/moreTorunamentsHeadingTv"
            android:orientation="horizontal"
            android:id="@+id/moreTournamentsRv"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/battle_item"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:paddingBottom="64dp"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>