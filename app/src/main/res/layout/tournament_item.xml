<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/gameIv"
        android:layout_width="110dp"
        android:layout_height="85dp"
        android:src="@drawable/image_124"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/example_game_name"
        android:textColor="@color/textgrey"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="@id/gameIv"
        app:layout_constraintStart_toStartOf="@+id/gameIv"
        app:layout_constraintTop_toBottomOf="@id/gameIv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

